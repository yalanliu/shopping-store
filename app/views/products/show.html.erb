<p id="notice"><%= notice %></p>

<div>
  <strong>商品圖片:</strong>
  <div>
    <% @product.images.each do |image| %>
      <%= link_to rails_blob_path(image, disposition: "attachment") do %>
        <%= image_tag image.variant(resize_to_limit: [300, 300]) %>
      <% end %>
    <% end %>
  </div>
</div>

<p>
  <strong>商品名:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>描述:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>商品貨號:</strong>
  <%= @product.sku %>
</p>

<p>
  <strong>原價:</strong>
  <%= @product.list_price %>
</p>

<p>
  <strong>售價:</strong>
  <%= @product.sell_price %>
</p>

<p>
  <strong>庫存:</strong>
  <%= @product.stock %>
</p>

<p>
  <strong>狀態:</strong>
  <%= @product.status %>
</p>

<%= link_to '編輯商品', edit_product_path(@product) %> |
<%= link_to '返回商品列表', products_path %>
